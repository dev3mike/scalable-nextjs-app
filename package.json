{
  "name": "scalable-nextjs-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["packages/**"],
  "scripts": {
    "prepare": "husky install",
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "postinstall": "husky install"
  },
  "engines": {
    "node": ">=18.12.1",
    "yarn": ">=1.22.19",
    "npm": "do-not-use-npm"
  },
  "dependencies": {
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "eslint": "8.32.0",
    "eslint-config-next": "13.1.6",
    "next": "13.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "prettier": "^2.8.3"
  }
}
